{
	"name": "ramadhan-sheet",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:wrangler": "vite build && wrangler pages dev .svelte-kit/cloudflare",
		"build": "vite build",
		"preview": "vite preview",
		"deploy:wrangler": "wrangler pages deploy .svelte-kit/cloudflare",
		"deploy": "wrangler pages deploy .svelte-kit/cloudflare",
		"db:apply:local": "wrangler d1 execute ramadhan-sheet --local --file=schema.sql",
		"db:apply:remote": "wrangler d1 execute ramadhan-sheet --remote --file=schema.sql",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev:wrangler:watch": "concurrently \"vite build --watch\" \"wrangler pages dev --live-reload .svelte-kit/cloudflare\""
	},
	"devDependencies": {
		"concurrently": "^9.1.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.7",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.2.3",
		"drizzle-kit": "^0.31.9",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"wrangler": "^4.65.0"
	},
	"dependencies": {
		"drizzle-orm": "^0.45.1",
		"gsap": "^3.14.2"
	}
}
